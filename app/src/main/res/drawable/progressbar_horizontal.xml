<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!--  设置背景色（灰色）  -->
    <item  android:id="@android:id/background" >
        <shape>
            <corners android:radius="5dip" />
            <gradient android:startColor="@color/list_view_divider"
                android:endColor="@color/list_view_divider" />
        </shape>
    </item>

    <!--  设置进度条颜色（蓝色）  -->
    <item  android:id="@android:id/progress" >
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient  android:startColor="@color/title_blue"
                    android:endColor="@color/title_blue" />
            </shape>
        </clip>
    </item>

</layer-list>