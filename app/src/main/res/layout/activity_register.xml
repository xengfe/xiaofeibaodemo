<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/layout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text_shap_bottom"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="13dp"
            android:src="@mipmap/user_icon" />

        <include layout="@layout/input_vertical_line"/>

        <EditText
            android:id="@+id/user_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:background="@drawable/edit_text_shap_none"
            android:hint="请输入姓名"
            android:textColorHint="@color/hint_text_color"
            android:textSize="14sp"
            android:inputType="text"
            android:maxEms="3"
            android:minEms="2"
            android:minLines="1"
            android:padding="13dp"
            android:textCursorDrawable="@drawable/color_cursor" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/edit_text_shap_bottom"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="13dp"
            android:src="@mipmap/account_icon" />

        <include layout="@layout/input_vertical_line"/>

        <EditText
            android:id="@+id/user_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:background="@drawable/edit_text_shap_none"
            android:hint="请输入手机号"
            android:textColorHint="@color/hint_text_color"
            android:textSize="14sp"
            android:inputType="phone"
            android:maxLength="11"
            android:minLines="1"
            android:padding="13dp"
            android:singleLine="true"
            android:textCursorDrawable="@drawable/color_cursor" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/edit_text_shap_none"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="13dp"
            android:src="@mipmap/reg_num_icon" />

        <include layout="@layout/input_vertical_line"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:background="@drawable/edit_text_shap_none"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/phone_reg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/edit_text_shap_none"
                android:gravity="center_vertical"
                android:hint="请输入手机验证码"
                android:textColorHint="@color/hint_text_color"
                android:textSize="14sp"
                android:inputType="number"
                android:maxLength="4"
                android:minLines="1"
                android:padding="13dp"
                android:textCursorDrawable="@drawable/color_cursor" />/>

            <include
                layout="@layout/vertical_line"/>

            <Button
                android:id="@+id/send_phone_reg_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/edit_text_shap_none"
                android:gravity="center"
                android:text="@string/btn_send_phone_reg"
                android:textColor="@color/title_blue"
                android:textSize="14sp" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text_shap_bottom"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="13dp"
            android:src="@mipmap/password_icon" />

        <include layout="@layout/input_vertical_line"/>

        <EditText
            android:id="@+id/user_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:background="@drawable/edit_text_shap_none"
            android:hint="请输入密码"
            android:textColorHint="@color/hint_text_color"
            android:textSize="14sp"
            android:inputType="numberPassword"
            android:maxLength="11"
            android:minLines="1"
            android:padding="13dp"
            android:textCursorDrawable="@drawable/color_cursor" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/edit_text_shap_none"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="13dp"
            android:src="@mipmap/password_icon" />

        <include layout="@layout/input_vertical_line"/>

        <EditText
            android:id="@+id/affirm_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:background="@drawable/edit_text_shap_none"
            android:hint="请输入密码"
            android:textColorHint="@color/hint_text_color"
            android:textSize="14sp"
            android:inputType="numberPassword"
            android:maxLength="8"
            android:minLines="1"
            android:padding="13dp"
            android:textCursorDrawable="@drawable/color_cursor" />

    </LinearLayout>


    <Button
        android:id="@+id/regist_new_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_round_shap_selector"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="14sp" />
</LinearLayout>
