<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginEnd="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginStart="20dp"
        android:background="@color/background"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/pay_result_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_shap_bottom"
            android:gravity="center"
            android:text="支付密码错误，请重试"
            android:textSize="14sp" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_shap_none"
            android:orientation="horizontal">

            <Button
                android:id="@+id/pay_result_try"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:text="重试"
                android:textColor="@color/light_black"
                android:textSize="14sp" />

            <include layout="@layout/vertical_line" />

            <Button
                android:id="@+id/pay_result_forget"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:text="忘记密码"
                android:textColor="@color/light_black"
                android:textSize="14sp" />

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
