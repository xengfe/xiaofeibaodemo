<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.FragmentPreRaise">

    <include layout="@layout/layout_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_shap_none"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/edit_text_shap_none">

            <Button
                android:id="@+id/pre_kind_image_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@null"
                android:drawableEnd="@drawable/btn_raise_selector"
                android:drawableRight="@drawable/btn_raise_selector"
                android:gravity="center"
                android:text="行业"
                android:textColor="@color/light_black"
                android:textSize="14sp" />

        </RelativeLayout>

        <include
            layout="@layout/vertical_line"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/edit_text_shap_none">

            <Button
                android:id="@+id/pre_sort_image_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@null"
                android:drawableEnd="@drawable/btn_raise_selector"
                android:drawableRight="@drawable/btn_raise_selector"
                android:gravity="center"
                android:text="排序"
                android:textColor="@color/light_black"
                android:textSize="14sp" />

        </RelativeLayout>


    </LinearLayout>



    <com.handmark.pulltorefresh.library.PullToRefreshListView xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/pre_pull_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@drawable/list_item_divider"
        android:cacheColorHint="@android:color/transparent"
        android:dividerHeight="1dp"
        android:background="@color/white"
        android:fadingEdge="none"
        android:fastScrollEnabled="false"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"
        android:smoothScrollbar="true"
        ptr:ptrAnimationStyle="rotate"
        ptr:ptrHeaderBackground="@color/background"
        ptr:ptrHeaderSubTextColor="#00ffff"
        ptr:ptrHeaderTextColor="#ffffff">

    </com.handmark.pulltorefresh.library.PullToRefreshListView>

</LinearLayout>
