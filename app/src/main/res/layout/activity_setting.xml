<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/setting_main"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".activities.SettingActivity">


    <include
        layout="@layout/layout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/avoid_disturb_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text_shap_bottom"
        android:drawableEnd="@mipmap/arrow_right"
        android:drawableRight="@mipmap/arrow_right"
        android:gravity="center_vertical|left"
        android:paddingEnd="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingStart="20dp"
        android:text="免打扰"
        android:textSize="14sp" />



    <Button
        android:id="@+id/reset_password_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_shap_bottom"
        android:drawableEnd="@mipmap/arrow_right"
        android:drawableRight="@mipmap/arrow_right"
        android:gravity="center_vertical|left"
        android:paddingEnd="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingStart="20dp"
        android:text="修改密码"
        android:textSize="14sp" />



    <Button
        android:id="@+id/reset_phone_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_shap_bottom"
        android:drawableEnd="@mipmap/arrow_right"
        android:drawableRight="@mipmap/arrow_right"
        android:gravity="center_vertical|left"
        android:paddingEnd="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingStart="20dp"
        android:text="修改手机绑定"
        android:textSize="14sp" />



    <Button
        android:id="@+id/suggestion_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_shap_bottom"
        android:drawableEnd="@mipmap/arrow_right"
        android:drawableRight="@mipmap/arrow_right"
        android:gravity="center_vertical|left"
        android:layout_marginTop="10dp"
        android:paddingEnd="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingStart="20dp"
        android:text="意见反馈"
        android:textSize="14sp" />


    <Button
        android:id="@+id/about_us_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_shap_bottom"
        android:drawableEnd="@mipmap/arrow_right"
        android:drawableRight="@mipmap/arrow_right"
        android:gravity="center_vertical|left"
        android:paddingEnd="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingStart="20dp"
        android:text="关于我们"
        android:textSize="14sp" />

    <Button
        android:id="@+id/check_version_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_shap_bottom"
        android:drawableEnd="@mipmap/arrow_right"
        android:drawableRight="@mipmap/arrow_right"
        android:gravity="center_vertical|left"
        android:paddingEnd="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingStart="20dp"
        android:text="版本更新"
        android:textSize="14sp" />

    <Button

        android:id="@+id/log_out_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_shap_none"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:paddingEnd="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingStart="20dp"
        android:text="退出系统"
        android:textSize="14sp" />


</LinearLayout>
