<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".activities.WithdrawActivity">

    <include layout="@layout/layout_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/edit_text_shap_none"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical|left"
            android:padding="10dp"
            android:text="储蓄卡"
            android:textSize="14sp" />


        <Button
            android:id="@+id/withdraw_bank_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@null"
            android:drawableEnd="@mipmap/arrow_right"
            android:drawableRight="@mipmap/arrow_right"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="招商银行（8888）"
            android:textSize="14sp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/edit_text_shap_none"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/edit_text_shap_none"
            android:padding="10dp"
            android:text="金额" />

        <include layout="@layout/input_vertical_line" />

        <EditText
            android:id="@+id/withdraw_money"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:background="@drawable/edit_text_shap_none"
            android:hint="请输入金额"
            android:inputType="number"
            android:maxEms="10"
            android:minEms="1"
            android:minLines="1"
            android:padding="13dp"
            android:textColorHint="@color/hint_text_color"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="14sp" />

    </LinearLayout>

    <Button
        android:id="@+id/withdraw_next_step"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_round_shap_selector"
        android:gravity="center"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="14sp" />

</LinearLayout>
